<!-- source/flats/show.html.erb -->
<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 35vh; background-position: center;">
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">

      <!-- Inject flat data in template -->
      <div class="infos">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
        <p><%= flat.name %></p>
        <h1><%= flat.description %></h1>
        <p><%= flat.city_name %></p>
      </div>
      <div class="form">
        <h1>Book this flat</h1>
      </div>
    </div>
  </div>
</div>
